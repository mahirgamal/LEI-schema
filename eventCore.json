{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "classpath:/json/LEI/eventCore.json",
  "type": "object",
  "description": "event core json schema",
  "additionalProperties": false,
  "required": [
    "source",
    "owner",
    "eventDateTime",
    "message"
  ],
  "properties": {
    "source": {
      "$ref": "eventSource.json"
    },
    "owner": {
      "$ref": "eventOwnerType.json",
      "description": "details of the owner"
    },
    "message": {
      "required": [
        "eventName",
        "item",
        "event"
      ],
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "if": {
          "properties": {
            "properties.item.properties.itemType": {
              "const": "Crop"
            }
          }
        },
        "then": {
          "eventName": {
            "$ref": "plantstypes.json"
          }
        },
        "else": {
          "if": {
            "properties": {
              "properties.item.properties.itemType": {
                "const": "Animal"
              }
            }
          },
          "then": {
            "eventName": {
              "$ref": "leiEventsTypes.json"
            }
          },
          "else": {
            "if": {
              "properties": {
                "properties.item.properties.itemType": {
                  "const": "Machinery"
                }
              }
            },
            "then": {
              "eventName": {
                "$ref": "abc.json"
              }
            }
          }
        },
        "item": {
          "$ref": "itemType.json",
          "description": "Unique animal,crop, machinery, or ... scheme and identifier combination."
        },
        "session": {
          "type": "object",
          "description": "session details",
          "additionalProperties": false,
          "properties": {
            "sessionID": {
              "type": "string",
              "description": "random number"
            },
            "totalInSession": {
              "type": "integer",
              "description": "total of rfid per pic",
              "minimum": 0
            }
          },
          "required": [
            "sessionID",
            "totalInSession"
          ]
        }
      },
      "oneOf": [
        {
          "required": [
            "event"
          ],
          "properties": {
            "eventName": {
              "const": "Weight"
            },
            "event": {
              "type": "object",
              "$ref": "leiWeightEvent.json"
            }
          }
        },
        {
          "required": [
            "event"
          ],
          "properties": {
            "eventName": {
              "const": "Score"
            },
            "event": {
              "type": "object",
              "$ref": "leiScoreEvent.json"
            }
          }
        },
        {
          "required": [
            "event"
          ],
          "properties": {
            "eventName": {
              "const": "Arrival"
            },
            "event": {
              "type": "object",
              "$ref": "leiArrivalEvent.json"
            }
          }
        },
        {
          "required": [
            "event"
          ],
          "properties": {
            "eventName": {
              "const": "Departure"
            },
            "event": {
              "type": "object",
              "$ref": "leiDepartureEvent.json"
            }
          }
        },
        {
          "required": [
            "event"
          ],
          "properties": {
            "eventName": {
              "const": "Death"
            },
            "event": {
              "type": "object",
              "$ref": "leiDeathEvent.json"
            }
          }
        },
        {
          "required": [
            "event"
          ],
          "properties": {
